<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp">

    <ImageView
        android:id="@+id/img_notification"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/baihat" />

    <LinearLayout
        android:id="@+id/linear_notification"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/img_notification"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_tenbaihat_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên Bài Hát"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/txt_tencasi_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên Ca Sĩ"
            android:textColor="@color/black"
            android:textSize="14dp" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/btn_Play_Pause_notification"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@id/btn_clear_notification"
        android:src="@drawable/icon_play" />

    <ImageButton
        android:id="@+id/btn_clear_notification"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_clear" />


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relavtive_song_search"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:padding="5dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_song_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="7dp">
            <ImageView
                android:id="@+id/img_song_search"
                android:scaleType="fitXY"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/txt_song_search"
            android:textSize="18dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="3dp"
            android:layout_toRightOf="@id/cardview_song_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_song_casi_search"
            android:textSize="15dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/cardview_song_search"
            android:layout_below="@id/txt_song_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </RelativeLayout>



</RelativeLayout>
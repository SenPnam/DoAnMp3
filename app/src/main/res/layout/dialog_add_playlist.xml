<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/custom_diaglog_background"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_title_themplaylist"
        android:text="Thêm Playlist"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-condensed-light"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_themplaylist"
        android:text="Nhập Tên Playlist:"
        android:textSize="16dp"
        android:textColor="@color/black"
        android:layout_below="@id/txt_title_themplaylist"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_add_playlist"
        android:layout_below="@id/txt_themplaylist"
        android:layout_marginHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:placeholderText="Tên Playlist"
        app:errorEnabled="true"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edt_add_playlist"
            android:inputType="textPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>


    <LinearLayout
        android:layout_below="@+id/text_input_add_playlist"
        android:layout_marginVertical="30dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingHorizontal="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAdd"
            android:text="Thêm"
            android:textSize="20dp"
            android:textColor="@color/black"

            android:layout_width="120dp"
            android:layout_height="70dp"
            android:backgroundTint="#04868A"
            app:elevation="15dp"
            app:strokeColor="@color/black"
            app:cornerRadius="5dp"
            style="@style/Widget.MaterialComponents.Button"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            android:text="Hủy"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:layout_marginLeft="80dp"
            app:elevation="15dp"
            app:strokeColor="@color/black"
            app:strokeWidth="2dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>



    </LinearLayout>
</RelativeLayout>
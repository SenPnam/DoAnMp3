<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.SearchFragment.AllSearchFragment">

    <RelativeLayout
        android:layout_gravity="fill_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layout_all_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:id="@+id/layout_result_baihat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/txt_result_baihat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Bài Hát"
                    android:textColor="@color/black"
                    android:textSize="30dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_result_baihat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_result_baihat"
                    android:layout_marginTop="5dp"
                    android:padding="5dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_viewmore_baihat_result"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rv_result_baihat"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="Xem Thêm"
                    android:textAllCaps="false"
                    android:textSize="14dp"
                    app:cornerRadius="25dp"
                    app:elevation="25dp"
                    app:strokeColor="@color/black"
                    app:strokeWidth="0.5dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_result_album"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/txt_result_album"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Album"
                    android:textColor="@color/black"
                    android:textSize="30dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_result_album"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_result_album"
                    android:layout_marginTop="5dp"
                    android:padding="5dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_viewmore_album_result"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rv_result_album"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="Xem Thêm"
                    android:textAllCaps="false"
                    android:textSize="14dp"
                    android:padding="0dp"
                    app:cornerRadius="25dp"
                    app:elevation="25dp"
                    app:strokeColor="@color/black"
                    app:strokeWidth="0.5dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_result_casi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/txt_result_casi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Ca Sĩ"
                    android:textColor="@color/black"
                    android:textSize="30dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_result_casi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_result_casi"
                    android:layout_marginTop="5dp"
                    android:padding="5dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_viewmore_casi_result"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rv_result_casi"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="Xem Thêm"
                    android:textAllCaps="false"
                    android:textSize="14dp"
                    app:cornerRadius="25dp"
                    app:elevation="25dp"
                    app:strokeColor="@color/black"
                    app:strokeWidth="0.5dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_result_playlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/txt_result_playlist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="Playlists"
                    android:textColor="@color/black"
                    android:textSize="30dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_result_playlist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_result_playlist"
                    android:layout_marginTop="5dp"
                    android:padding="5dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_viewmore_playlist_result"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/rv_result_playlist"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="Xem Thêm"
                    android:textAllCaps="false"
                    android:textSize="14dp"
                    app:cornerRadius="25dp"
                    app:elevation="25dp"
                    app:strokeColor="@color/black"
                    app:strokeWidth="0.5dp" />
            </RelativeLayout>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/txt_search_result_noinfo"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đang Lấy Dữ Liệu"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45mm"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:icon="@drawable/error"
            app:iconSize="40dp"
            app:strokeWidth="0dp" />
    </RelativeLayout>

</androidx.core.widget.NestedScrollView>

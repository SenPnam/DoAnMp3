<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.PlayFragment.ListSongFragment">

    <LinearLayout
        android:id="@+id/infosong"
        android:orientation="vertical"
        android:layout_margin="20dp"
        android:background="@drawable/background_gradient"
        android:elevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_info_song"
            android:text="Bài Hát: "
            android:maxLines="1"
            android:layout_margin="12dp"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_info_casi"
            android:text="Ca Sĩ: "
            android:maxLines="1"
            android:layout_margin="12dp"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_info_danhmuc"
            android:text="Album: "
            android:maxLines="1"
            android:layout_margin="12dp"
            android:textSize="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_listsong_fragment"
        android:layout_marginVertical="12dp"
        android:layout_below="@id/infosong"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>
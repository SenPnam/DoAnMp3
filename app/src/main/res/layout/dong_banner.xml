<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <View
        android:background="@drawable/custom_background_color"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>
    <ImageView
        android:id="@+id/imgBanner"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_alignBottom="@id/imgBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgBanner2"
            android:layout_marginHorizontal="10dp"

            android:layout_marginBottom="10dp"
            android:padding="2dp"
            android:layout_width="70dp"
            android:layout_height="70dp"/>
        <TextView
            android:id="@+id/titleBannerBaiHat"
            android:text="Xin đừng nhấc máy"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_alignTop="@id/imgBanner2"
            android:layout_toRightOf="@id/imgBanner2"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/contentBanner"
            android:text="Đây là nội dung của quảng cáo"
            android:layout_toRightOf="@id/imgBanner2"
            android:layout_below="@id/titleBannerBaiHat"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="10dp"
            android:maxLines="2"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relavtive_song_bvs"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:padding="5dp"
    app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_song_bvs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="7dp">
                <ImageView
                    android:id="@+id/img_song_bvs"
                    android:scaleType="fitXY"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/txt_song_bvs"
                android:textSize="16dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="3dp"
                android:layout_toRightOf="@id/cardview_song_bvs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/txt_song_casi_bvs"
                android:textSize="14dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/cardview_song_bvs"
                android:layout_below="@id/txt_song_bvs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </RelativeLayout>



</RelativeLayout>